.search-box {
  background-color: #41bd55;
  padding: 28rpx;
}
.search-box > view {
  border-radius: 10rpx;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ffffff;
  color: #a9a9a9;
  text-align: center;
  font-size: 34rpx;
}
.search-box > view > image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.movie-box .list-child {
  margin-bottom: 10rpx;
}
.movie-box .list-child > .top-title {
  width: 100%;
  font-size: 30rpx;
  display: flex;
  justify-content: space-between;
  padding: 30rpx 0;
}
.movie-box .list-child > .top-title > view {
  flex: 1;
  display: flex;
  align-items: center;
}
.movie-box .list-child > .top-title > view .green-line {
  width: 7rpx;
  height: 100%;
  background: #41bd55;
  display: inline-block;
  vertical-align: top;
}
.movie-box .list-child > .top-title > view .list-title {
  vertical-align: top;
  height: 100%;
  margin-left: 20rpx;
}
.movie-box .list-child > .top-title > navigator {
  color: #41bd55;
  margin-right: 20rpx;
}
.movie-box .list-child .scroll-box {
  white-space: nowrap;
  display: flex;
}
.movie-box .list-child .scroll-box .img-list {
  padding: 10rpx;
  display: inline-block;
  vertical-align: top;
}
.movie-box .list-child .scroll-box .img-list > image {
  display: block;
  width: 200rpx;
  margin: auto;
  height: 280rpx;
}
.movie-box .list-child .scroll-box .img-list > text:nth-child(2) {
  width: 200rpx;
  display: block;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
  font-size: 28rpx;
  font-weight: bold;
  margin-top: 10rpx;
}
.movie-box .list-child .scroll-box .img-list > view {
  margin: 0;
  width: 130rpx;
  height: 25rpx;
  overflow: hidden;
  padding: 0px;
  display: inline-block;
}
.movie-box .list-child .scroll-box .img-list > view > image {
  width: 100%;
  height: 110px;
}
.movie-box .list-child .scroll-box .img-list > text:nth-child(4) {
  display: inline-block;
  font-size: 28rpx;
  margin-left: 15rpx;
}
